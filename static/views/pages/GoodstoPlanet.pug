extends ../layout.pug

block prepend styles
    link(rel='stylesheet' href='//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css')

block content
    div(class='breadcrumb')
        li= title
    form(id='goodstoplanet-add-form' name='goodstoplanet-add-form' class='form-inline' action='')
        div(class='form-group')
            div(class='col-md-3')
                label(for='planet') Planet
            div(class='col-md-9')
                select(id='planet' name='planet' class='form-control' required='required')
                    option(value='' selected='selected') Select planet
        div(class='form-group')
            div(class='col-md-3')
                label(for='goods') Goods
            div(class='col-md-9')
                select(id='goods' name='goods' class='form-control' required='required')
                    option(value='' selected='selected') Select good
        div(class='form-group')
            div(class='col-md-12')
                button(type='submit' id='btn-create' class='btn btn-primary') Create
                button(type='submit' id='btn-update' class='btn btn-primary btn-hidden') Update
                input(type='hidden' id='update-item' name='update-item')
        div.list-wrapper
            table(id='goodstoplanet-list')
block append scripts
    script(src='/static/js/models/planet.js')
    script(src='/static/js/models/goods.js')
    script(src='/static/js/models/goodstoplanet.js')
    script(src='//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js')
    script(src='/static/js/views/goodstoplanet.js')
